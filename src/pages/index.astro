---
import Layout from "../layouts/Layout.astro";
import Status from "../components/status.astro";
import Navbar from "../components/Navbar.astro";
import ParticleBox from "../components/ParticleBox";
---

<Layout title="Martin Weber | developer">
  <div class="w-screen h-screen flex flex-col">
    <Navbar />
    <div
      class="flex-1 grid grid-rows-5 grid-cols-2 items-center justify-center text-center"
    >
      <div class="row-start-2 row-span-3 place-self-stretch rounded-3xl ml-6">
        <ParticleBox client:load />
      </div>
      <div class="col-start-2 row-start-3">
        <h1 class="text-6xl m-6 ">Martin Weber</h1>
        <h3 class="text-slate-300 ">
          front-end (wannabe full-stack) developer
        </h3>
      </div>
    </div>
    <Status status="active" />
  </div>
</Layout>
