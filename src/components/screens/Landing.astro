---
import ParticleBox from "../framework/ParticleBox.svelte";
import Status from "../Status.astro";
import { status } from "../../data/const";
---

<div
  class="flex-1 grid grid-rows-5 grid-cols-2 items-center justify-center text-center"
>
  <div class="row-start-1 row-span-5 place-self-stretch rounded-3xl ml-6">
    <ParticleBox client:load />
  </div>
  <div class="col-start-2 row-start-3">
    <h1 class="text-6xl m-6">Martin Weber</h1>
    <h3 class="text-slate-300 ">front-end (wannabe full-stack) developer</h3>
  </div>
  <div class="row-start-4">
    <Status status={status} />
  </div>
</div>
